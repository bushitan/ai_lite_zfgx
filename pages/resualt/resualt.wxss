/* pages/resualt/resualt.wxss */

.header{
    padding:  15px 15px 0;
}
.header .content{
    display: flex;
    justify-content: space-between;
    align-items: center;
    border-bottom: 1rpx #eee solid ;
    padding-bottom: 15px;
    font-size: 9pt;
    color: #ff726a;
}

.dialog{
    font-size: 13pt;
    padding: 15px;
    text-align: center;
}
textarea{
    width: 100%;
    background-color: #ffff;
    border: 1rpx #aaa dashed;
    border-radius: 5px;
}



canvas{
    position: absolute;
    top:-10000px;

}



.xx_btn{
    display: flex;
    justify-content: space-around;
    margin-top: 40px;
}

.mode{
    color: #fff;
    display: flex;
     justify-content: space-around; 
    align-content: center;
    text-align: center;
    border-radius: 50%;
    
}
.mode_bg_center{
    width: 70px;
    height: 70px;
    margin: 0 40px;
    background-color: #eeede8;
    box-shadow:0px 1px 1px #828282 inset;
}
.mode .node{
    margin: auto;
     line-height: 58px;
    font-size: 17pt;
     overflow:hidden;    
     width: 58px;
    height: 58px; 
    /* color: #ec563e; */
    
    background-color: #fff;
    border-radius: 50%;
    box-shadow:0px 1px 1px #828282;
    font-weight: bold;
}
.mode .image{
    width: 100%;
    height:100%;
}

.mode_bg_sub{
    width: 60px;
    height: 60px;
    /* margin: 10px 0; */
    background-color: #eeede8;
    box-shadow:0px 1px 1px #828282 inset;
}

.mode_bg_sub .node{
    margin: auto;
     line-height: 49px;
    font-size: 14pt;
     overflow:hidden;    
     width: 49px;
    height: 49px; 
    color: #ec563e;
    background-color: #fff;
    border-radius: 50%;
    box-shadow:0px 1px 1px #828282;
    font-weight: bold;
    
    display: flex;
     justify-content: space-around; 
    align-content: center;
}
.mode_bg_sub image{
    margin: auto;
    width: 21px;
    height: 21px;
}

.click {
    background-color: #eee !important;
}




































.xx_box{
    padding: 1px 15px 15px;
}
.xx_card{
    background-color: #fff;
    border-radius: 5px;
    box-shadow:0px 0px 10px #aaa;
}

.xx_image{
    display: flex;
    justify-content: center;
    position: relative;
    margin-top:30px;
    /* background-color: #eee; */
}
.org{
    /* position: absolute;
    top: 0; */
    width: 100%;
    height: 300px;
    border-top-left-radius: 5px;
    border-top-right-radius: 5px;
}
button{
    margin-top: 25px;
    /* font-size: 11pt; */
}

.sf{
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 13pt;
}
.sf image{
    width: 64px;
    height: 64px;
    border-radius: 50%;
    box-shadow:0px 0px 10px #ddd;
}
.sf label{
    margin-left:5px;
}