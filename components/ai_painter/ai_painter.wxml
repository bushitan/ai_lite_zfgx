

<view class='bg'>
    <!-- <view> -->
        <image src='{{bg}}' mode='widthFix'></image>
    <!-- </view> -->
    <view class='lineCanvas'>
        <canvas canvas-id="lineCanvas" ></canvas>
    </view>

    <view class='movable'>
        <movable-area > 
            <block wx:for="{{landmark}}" wx:key="index">
                <movable-view 
                    class='point' 
                    x="{{item.x}}" y="{{item.y}}" 
                    direction="all"
                    bindchange="touch"
                    bindcat
                    data-id="{{item.id}}"
                    data-index="{{item.id}}"
                    data-key="{{index}}"
                    style='height: {{item.width}}px;width: {{item.height}}px;background: {{pointColor}}; '
                >
                </movable-view>
            </block>
        </movable-area>
    </view>

    
</view>