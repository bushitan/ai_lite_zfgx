
.header{
    padding: 10px 15px;
    background-color: #fff;
     /* box-shadow:0px 1px 5px #aaa; */
}
.header .title{
    font-size: 11pt;
    text-align: center;
    padding-bottom:5px; 
    /* font-weight: bolder; */
}
.header .content{
    font-size: 9pt;
    color: #888;
    display: flex;
    justify-content: space-between;
    /* align-items: center; */
}
.header .image{
    flex-basis:60px;
    margin-right: 10px;
}
.header image{
    width: 60px;
    height:60px;
}
.header .des{
}
.header .summary{
    
    height:60px;
    line-height: 15px;
    overflow:hidden; 
    text-overflow:ellipsis;
    display:-webkit-box; 
    -webkit-box-orient:vertical;
    -webkit-line-clamp:4; 
}
.header .more{
    text-align: right;
    color: #888;
    padding-right: 5px;
}

.task {
    font-weight: bolder;
    color: #ff762a;
}